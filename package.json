{
  "name": "highlight-it",
  "version": "2.0.0",
  "description": "A simple, engine-agnostic syntax highlighting loader for web pages. Just include one script and you're done.",
  "homepage": "https://github.com/vespaiach/highlight-it#readme",
  "bugs": {
    "url": "https://github.com/vespaiach/highlight-it/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vespaiach/highlight-it.git"
  },
  "license": "MIT",
  "author": "Trinh Nguyen <nta.toan@gmail.com>",
  "keywords": [
    "syntax",
    "highlighting",
    "prism",
    "code",
    "highlight",
    "loader"
  ],
  "type": "commonjs",
  "main": "highlight-it.js",
  "scripts": {
    "test": "http-server",
    "docs": "overmind s",
    "build": "bun build highlight-it.ts --outdir ./dist/ --target browser --bundle --minify",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "http-server": "^14.1.1",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@types/bun": "^1.3.5",
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3"
  },
  "private": true
}
